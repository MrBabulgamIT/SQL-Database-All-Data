<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/ten"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Id : "
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <EditText
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UserIdedittext_id"
                android:hint=" Enter your user id"
                android:textStyle="normal"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :  "
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <EditText
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userpasswordedittext_id"
                android:hint=" Enter your Password"
                android:textStyle="normal"
                android:textSize="20dp"
                />
        </LinearLayout>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/saveButton_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Data"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            />
        <Button
            android:layout_margin="10dp"
            android:id="@+id/showButton_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Data"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            />
        <Button
            android:layout_margin="10dp"
            android:id="@+id/updateButton_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Data"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/deletedButton_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deleted Data"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            />


    </LinearLayout>

</ScrollView>